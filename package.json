        "lightning": "^6.2.3",
        "next": "^12.3.1",
        "nextjs-cors": "^2.1.1",
        "nostr-tools": "^1.0.0",
        "qrcode.react": "^3.1.0",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-hook-form": "^7.37.0",
        "react-image-file-resizer": "^0.4.8",
